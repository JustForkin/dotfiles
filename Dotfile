backup [".oh-my-zsh", ".fonts", ".vimrc", ".vim", ".zshrc", ".bashrc"], "~/dotfiles.backup"
sh "rm -rf ./vim/bundle/*"
sh "git clone http://github.com/gmarik/vundle.git ./vim/bundle/vundle"
git_clone "https://github.com/robbyrussell/oh-my-zsh.git", "~/.oh-my-zsh"
link "fonts", "~/.fonts"
link "vimrc", "~/.vimrc"
link "vim", "~/.vim"
link "zshrc", "~/.zshrc"
link "bashrc", "~/.bashrc"
link "Sublime Text 2", "~/Library/Application Support/Sublime Text 2"
sh "vim +BundleInstall +qa"